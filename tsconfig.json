{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "types": ["chrome", "node", "@types/react"],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "./src"
  },
  "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
